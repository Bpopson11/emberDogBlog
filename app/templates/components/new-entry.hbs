    <div>
      <form>
        <div class="form-group">
          <label for="title">Title</label>
          {{input value=title id="title" placeholder=entry.title}}
        </div>

        <div class="form-group">
          <label for="content">Content</label>
          {{textarea value=content id="content" placeholder=entry.content}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input type="date" value=date id="date" placeholder=entry.date.name}}
        </div>

        <div class="form-group">
          <label for="author">Author</label>
          {{input value=author id="author" placeholder=entry.author}}
        </div>

        <div class="form-group">
          <label for="image">Image URL</label>
          {{input value=image id="image" placeholder=entry.image}}
        </div>

        <div class="form-group">
          <label for="blurb">Blurb</label>
          {{input value=blurb id="blurb" placeholder=entry.blurb}}
        </div>

        <button class="btn btn-xs detail" {{action 'saveEntry' entry}}>Save</button>
      </form>
    </div>
