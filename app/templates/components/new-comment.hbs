{{#if addNewComment}}
  <h1>New Comment</h1>
    <div>
      <form>
        <div class="form-group">
          <label for="content">Comment</label>
          {{input value=content id="content"}}
        </div>

        <div class="form-group">
          <label for="user">Username</label>
          {{input value=user id="user"}}
        </div>

        <div class="form-group">
          <label for="date">Date</label>
          {{input value=date type="date" class="date"}}
        </div>

        <button {{action 'saveComment1'}}>Save</button>
      </form>
    </div>
{{else}}
    <button {{action 'commentFormShow'}}>New Comment</button>
{{/if}}
