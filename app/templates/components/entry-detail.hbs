<div class="panel panel-default">
  <div class="panel-heading">
    <h2>{{entry.title}}</h2>
    <p>Written by {{entry.author}}</p>
    <p>{{entry.date}}</p>
    <button class="btn btn-xs detail" {{action 'delete' entry}}>Delete</button><br>
    {{update-entry entry=model update="update"}}
  </div>
<div class="media">
  <div class="media-left">
    <img class="entryDetail" src={{entry.image}}>
  </div>
  <div class="media-body">
    <p>{{entry.content}}</p>
  </div>
  </div>
  <div class="panel-footer">
    <ul>
      {{#each entry.comments as |comment|}}
        {{comment-tile comment=comment entry=model destroyComment="destroyComment"}}
      {{/each}}
    </ul>
  </div>
</div>
